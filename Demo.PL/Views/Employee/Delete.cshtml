@model Employee
@{
    ViewData["Title"] = "Delete";
}

<div asp-validation-summary="All"></div>

<h1>Are You ensure to delete Employee @Model.Name ?</h1>
<br />

<form asp-action="Delete">

    <div class="form-group">
        <label class="col-form-label" asp-for="Name"></label>
        <input class=" form-control" asp-for="Name" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label class="col-form-label" asp-for="Email"></label>
        <input class=" form-control" asp-for="Email" />
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label class="col-form-label" asp-for="Address"></label>
        <input class=" form-control" asp-for="Address" />
        <span asp-validation-for="Address" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label class="col-form-label" asp-for="Gender"></label>
        <input class=" form-control" asp-for="Gender" />
        <span asp-validation-for="Gender" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label class="col-form-label" asp-for="Salary"></label>
        <input class=" form-control" asp-for="Salary" />
        <span asp-validation-for="Salary" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label class="col-form-label" asp-for="IsActive"></label>
        <input class=" form-control" asp-for="IsActive" />
        <span asp-validation-for="IsActive" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label class="col-form-label" asp-for="PhoneNumber"></label>
        <input class=" form-control" asp-for="PhoneNumber" />
        <span asp-validation-for="PhoneNumber" class="text-danger"></span>
    </div>

    

    <button type="submit" value="Delete" class="btn btn-danger">Delete</button>  | 
   
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>

</form>