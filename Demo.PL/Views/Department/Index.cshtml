@model IEnumerable<Department>
@{
    ViewData["Title"] = "AllDepartments";
}

<a asp-action="Create" class="btn btn-success">Create New Department </a>

<br />

@if (Model.Count() > 0)
{  
    <h1> All Departments</h1>
    <br  />

    <table class="table table-striped table-hover mt-3">
        <thead>
            <tr>
                <td>@Html.DisplayNameFor(D=>D.Code)</td>
                <td>@Html.DisplayNameFor(D=>D.Name)</td>
                <td>@Html.DisplayNameFor(D => D.CreationDate)</td>
                <td>Details</td>
                <td>Update</td>
                <td>Delete</td>

            </tr>

        </thead>

        <tbody>
            @foreach (var department in Model)
            { 
             <tr>
                    <td>@department.Code</td>
                    <a href="e:\course.net\mvc\assignment_session3_mvc\g03_demo_solution\demo.pl\views\department\create.cshtml">e:\course.net\mvc\assignment_session3_mvc\g03_demo_solution\demo.pl\views\department\create.cshtml</a>
                    <td>@department.Name</td>
                    <td>@department.CreationDate</td>
                    <td><a asp-action="Details" asp-route-id="@department.Id"><i class="fas fa-eye"></i></a></td>
                    <td><a asp-action="Edit" asp-route-id="@department.Id"><i class="fas fa-edit"></i></a></td>
                    <td><a asp-action="Delete" asp-route-id="@department.Id"><i class="fa fa-trash"></i></a></td>
             </tr>
            
            }

        </tbody>
    </table>
}
else {
    <div class="mt-5 alert alert-warning">
        <h3> There is No Departments</h3>
    </div>

}

