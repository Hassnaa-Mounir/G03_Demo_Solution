@model Department
@{
    ViewData["Title"] = "Delete";
}

<h1>Are You ensure to delete Department @Model.Name ?</h1>
<br />

<form asp-action="Delete">

    <div class="form-group">
        <label class="col-form-label" asp-for="Code"></label>
        <input readonly class=" form-control" asp-for="Code" />
    </div>

    <div class="form-group">
        <label class="col-form-label" asp-for="Name"></label>
        <input readonly class=" form-control" asp-for="Name" />

    </div>

    <div class="form-group">
        <label class="col-form-label" asp-for="CreationDate"></label>
        <input readonly class=" form-control" asp-for="CreationDate" />

    </div>

    <input type="submit" value="Delete" class="btn btn-danger" /> |

    <a asp-action="Index" class="btn btn-secondary">Cancel</a>

</form>



